<script>
    const questions = [
        {
            q: "តើតុលាការព្រហ្មទណ្ឌអន្តរជាតិ (ICC) មានទីស្នាក់ការកណ្តាលនៅទីក្រុងណា?",
            options: ["ទីក្រុងហ្សឺណែវ", "ទីក្រុងឡាអេ", "ទីក្រុងញូវយ៉ក", "ទីក្រុងប៉ារីស"],
            correct: 1
        },
        {
            q: "តើលក្ខន្តិកៈក្រុងរ៉ូម (Rome Statute) ត្រូវបានអនុម័តនៅឆ្នាំណា?",
            options: ["១៩៩៨", "២០០២", "១៩៩៥", "២០១០"],
            correct: 0
        },
        {
            q: "តើបទល្មើសណាដែលស្ថិតនៅក្រោមយុត្តាធិការរបស់ ICC?",
            options: ["បទឧក្រិដ្ឋប្រល័យពូជសាសន៍", "បទឧក្រិដ្ឋប្រឆាំងមនុស្សជាតិ", "បទឧក្រិដ្ឋសង្គ្រាម", "គ្រប់ចំណុចខាងលើ"],
            correct: 3
        }
    ];

    let currentQ = 0;
    let score = 0;
    let selectedIdx = null;

    function loadQuestion() {
        const qData = questions[currentQ];
        document.getElementById("question").innerText = (currentQ + 1) + ". " + qData.q;
        const optionsDiv = document.getElementById("options");
        optionsDiv.innerHTML = "";
        
        qData.options.forEach((opt, index) => {
            const div = document.createElement("div");
            div.className = "option-item";
            div.innerText = opt;
            div.onclick = () => selectOption(index, div);
            optionsDiv.appendChild(div);
        });
        
        selectedIdx = null;
    }

    function selectOption(index, element) {
        const allOptions = document.querySelectorAll(".option-item");
        allOptions.forEach(opt => opt.classList.remove("selected"));
        element.classList.add("selected");
        selectedIdx = index;
    }

    function handleNext() {
        if (selectedIdx === null) {
            alert("សូមជ្រើសរើសចម្លើយមួយ!");
            return;
        }

        if (selectedIdx === questions[currentQ].correct) {
            score++;
        }

        currentQ++;
        if (currentQ < questions.length) {
            loadQuestion();
        } else {
            showResult();
        }
    }

    function showResult() {
        document.getElementById("quiz-content").style.display = "none";
        const resultArea = document.getElementById("result-area");
        resultArea.style.display = "block";
        document.getElementById("score-display").innerText = "អ្នកឆ្លើយត្រូវ " + score + " ក្នុងចំណោម " + questions.length + " សំណួរ";
    }

    // ចាប់ផ្តើមសំណួរដំបូង
    loadQuestion();
</script>

</body>
</html>
